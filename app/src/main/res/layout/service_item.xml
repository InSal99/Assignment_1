<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="service name"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rbIsChecked"
        app:layout_constraintBottom_toBottomOf="@id/rbIsChecked"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvServicInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 2.000"
        android:textColor="@android:color/system_accent2_500"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/rbIsChecked"
        app:layout_constraintBottom_toBottomOf="@id/rbIsChecked"
        app:layout_constraintEnd_toStartOf="@id/rbIsChecked"/>

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/rbIsChecked"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Intan"
        android:layoutDirection="rtl"
        app:buttonTint="@android:color/system_accent2_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>